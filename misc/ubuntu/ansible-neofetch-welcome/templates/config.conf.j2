print_info() {
    prin "\n"
    prin "\t┌───────────────────────────────────────────────────────────────┐"
    prin "\t│ $(tput setaf 7){{ neofetch_system_name }}{{ '\\t' *  (((65 - ( neofetch_system_name | length)) / 8 ) | int) }}│"
    prin "\t│ $(tput setaf 3){{ neofetch_system_description }}$(tput sgr0){{ '\\t' *  (((65 - ( neofetch_system_description | length)) / 8 ) | int) }}│"
    prin "\t└───────────────────────────────────────────────────────────────┘"
    info "\t $(tput setaf 1)User\t" title
    prin "\n"
    info "\t $(tput setaf 6)CPU\t" cpu
    info "\t $(tput setaf 6)OS\t" distro
    info "\t $(tput setaf 6)Kernel\t" kernel
    info "\t $(tput setaf 6)Packages" packages
    info "\t $(tput setaf 6)Local IP" local_ip
    info "\t $(tput setaf 6)Uptime\t" uptime
    prin "\n"
    info "\t $(tput setaf 6)CPU Usage" cpu_usage
    info "\t $(tput setaf 6)Memory\t" memory
    info "\t $(tput setaf 6)Disk" disk
}

